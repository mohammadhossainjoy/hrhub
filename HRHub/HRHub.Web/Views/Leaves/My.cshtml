@model IEnumerable<HRHub.Web.Data.Models.Leaf>
@{
    ViewData["Title"] = "My Leaves";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">My Leaves</h3>
        <a asp-action="Apply" class="btn btn-primary">Apply</a>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No leave requests yet.</div>
    }
    else
    {
        <div class="card card-shadow">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Type</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Days</th>
                            <th>Status</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.LeaveType?.Name</td>
                                <td>@r.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@r.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>@r.Days</td>
                                <td>@r.Status</td>
                                <td>@r.Reason</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
