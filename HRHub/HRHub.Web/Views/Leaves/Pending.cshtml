@model IEnumerable<HRHub.Web.Data.Models.Leaf>
@{
    ViewData["Title"] = "Pending Leaves";
}
<div class="container py-4">
    <h3 class="mb-3">Pending Leaves</h3>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }
    @if (TempData["Err"] != null)
    {
        <div class="alert alert-danger">@TempData["Err"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No pending requests.</div>
    }
    else
    {
        <div class="card card-shadow">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Employee</th>
                            <th>Type</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Days</th>
                            <th>Reason</th>
                            <th class="text-end" style="width:220px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Employee?.FullName</td>
                                <td>@r.LeaveType?.Name</td>
                                <td>@r.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@r.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>@r.Days</td>
                                <td>@r.Reason</td>
                                <td class="text-end">
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@r.LeaveId" />
                                        <button class="btn btn-sm btn-success" type="submit">Approve</button>
                                    </form>
                                    <form asp-action="Reject" method="post" class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@r.LeaveId" />
                                        <button class="btn btn-sm btn-danger" type="submit">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
