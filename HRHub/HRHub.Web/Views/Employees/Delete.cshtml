@model HRHub.Web.Data.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item"><a asp-action="Index">Employees</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="alert alert-warning" role="alert">
        <strong>Are you sure?</strong> This will permanently remove <em>@Model.FullName</em>.
    </div>

    <div class="card card-shadow col-lg-8">
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">Emp No</dt>
                <dd class="col-sm-9">@Model.EmpNo</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Company</dt>
                <dd class="col-sm-9">@Model.Company?.Name</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department?.Name</dd>

                <dt class="col-sm-3">Designation</dt>
                <dd class="col-sm-9">@Model.Designation?.Title</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="EmployeeId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
