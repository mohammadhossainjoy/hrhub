@model IEnumerable<HRHub.Web.Data.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Employees</h3>
        <a asp-action="Create" class="btn btn-primary">+ Create</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No employees found.</div>
    }
    else
    {
        <div class="card card-shadow">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Emp No</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Company</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Join Date</th>
                            <th>Active</th>
                            <th class="text-end" style="width:220px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.EmpNo</td>
                                <td>@e.FullName</td>
                                <td>@e.Email</td>
                                <td>@e.Company?.Name</td>
                                <td>@e.Department?.Name</td>
                                <td>@e.Designation?.Title</td>
                                <td>@e.JoinDate.ToString("yyyy-MM-dd")</td>
                                <td>@(e.IsActive ? "Yes" : "No")</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-action="Edit" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
